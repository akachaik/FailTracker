@model FailTracker.Web.Controllers.IssueDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

@Model.Subject

@using (Html.BeginForm("Delete", "Issue", new {id = Model.IssueId}))
{
    @Html.AntiForgeryToken()
    <a href="@Url.Action("Edit", new { id = Model.IssueId})" class="btn btn-default">Edit</a>
    <button id="delete" type="submit" class="btn btn-danger">Delete</button>
}

@section scripts
{
    <script>
        $("#delete").click(function() {
            if (confirm("Delete this issue")) {
                return true;
            }
            return false;
        });
    </script>
}

